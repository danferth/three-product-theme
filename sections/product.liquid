<section data-section-id="{{ section.id }}" data-section-type="product">




  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}



<div class="row product_main">
  <div class="col-12 product_main_header text-center">
    <h1>{{ product.title }}</h1>
    <p class='product_main_price'>{{ current_variant.price | money }}</p>
    <hr>
  </div>


  <div class="col-12 product_main_featured_img">
    <img src="{{ product.featured_image | img_url: 'large' }}" alt="">
  </div>


  <div class="col-12 product_main_imgs">
    <div class="row row-cols-3 no-gutters">
      {% if product.images.size > 1 %}
      {% for image in product.images offset:1 %}
        <div class='col'>
            <a href="{{ image.src | img_url: 'large' }}" data-thumbnail-id="{{ image.id }}" data-product-single-thumbnail{% if featured_image == image %} aria-current="true"{% endif %}>
              <img class="product-single__thumbnail-image" src="{{ image.src | img_url: '160x160' }}" alt="{{ image.alt | escape }}">
            </a>
          </div>
        {% endfor %}
    {% endif %}

    </div>
  </div>


  <div class="col-12 product_main_description mt-4 mb-3">
    <div class="row">
      <div class="col-12 product_description">{{ product.description }}</div>
      <div class="col-12 text-center">
        <hr class='hr-dashed mb-2'>
        <span class='product_description_more'>more</span>
        <i class="far fa-arrow-alt-circle-down d-block text-primary"></i>
      </div>
    </div>
  </div>



  <div class="col-12 mt-5">
    {% if section.settings.show_share_buttons %}
      {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
    {% endif %}
  </div>


  <div class="col-12 product_main_form mb-3 py-3 bg-warning">
    {% form 'product', product, data-product-form: '', data-product-handle: product.handle, data-enable-history-state: 'true' %}
      <input type="hidden" id="Quantity" name="quantity" value="1">
      <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
      <div class="row align-items-center">
        <div class="col-6 text-center">
          <h5 class='mb-0 font-weight-bold' data-product-price>{{ current_variant.price | money }}</h5>
        </div>
        <div class="col-6">
          <button
          class='btn btn-primary btn-block'
          type="submit"
          name="add"
          data-submit-button
          {% unless current_variant.available %}disabled="disabled"{% endunless %}>
            <span data-submit-button-text>
              {% if current_variant.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </span>
        </button>
        </div>
      </div>
    {% endform %}
  </div>

</div>



</section>

{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
{% endschema %}
